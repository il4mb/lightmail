[system]
group = lightmail
owner = lightmail

[database]
host = localhost
port = 3306
user = root
password = 
database = maildb
pool_size = 10

[imap]
imap_port = 143
imaps_port = 993
max_clients = 100
buffer_size = 8192
session_timeout = 1800
max_failed_attempts = 5
fast_append = true  # fast test mode: complete APPEND quickly

[lmtp]
socket=/run/

[logging]
path = /var/log/lightmail/lightmail.log

[ssl]
cert_file = /var/projects/lightmail/certs/cert.pem
key_file = /var/projects/lightmail/certs/key.pem

[s3]
endpoint = 
region = us-east-1
bucket = mails
access_key = 
secret_key = 
use_ssl = 1

[api]
bind = 0.0.0.0
port = 8080
token = secret

[antivirus]
enabled = false
host = localhost
port = 3310
mode = quarantine  # options: reject|quarantine|tag

[garbage]
# Number of soft-deleted messages processed per batch
batch_size = 100
# Sleep when no work is found (seconds)
idle_seconds = 60
# Pause between batches (seconds)
pause_seconds = 5
